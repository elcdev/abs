ADD TABLE "users"
  AREA "System Data"
  DESCRIPTION "ABS System data tables"
  DUMP-NAME "users"
  TABLE-TRIGGER "REPLICATION-WRITE" NO-OVERRIDE PROCEDURE "trg_users_rw.p" CRC "?" 

ADD FIELD "id" OF "users" AS int64 
  DESCRIPTION "Record Id"
  FORMAT ">>>>>>>>>>>9"
  INITIAL "0"
  POSITION 2
  MAX-WIDTH 4
  ORDER 10

ADD FIELD "uid" OF "users" AS char
  DESCRIPTION "Unique id"
  FORMAT "X(36)"
  INITIAL "guid"
  POSITION 3
  MAX-WIDTH 36
  ORDER 15

ADD FIELD "version" OF "users" AS int64 
  DESCRIPTION "Record version for replication"
  FORMAT ">>>>>>>>>>>9"
  INITIAL "0"
  POSITION 4
  MAX-WIDTH 4
  ORDER 20

ADD FIELD "state" OF "users" AS int64 
  DESCRIPTION "Record state for replication"
  FORMAT ">>>9"
  INITIAL "0"
  POSITION 5
  MAX-WIDTH 4
  ORDER 30

ADD FIELD "modify_date" OF "users" AS datetime 
  DESCRIPTION "Record modification date"
  FORMAT "99.99.99 hh:mm:ss"
  INITIAL "now"
  POSITION 6
  MAX-WIDTH 4
  ORDER 40

ADD FIELD "modify_user" OF "users" AS character 
  DESCRIPTION "Record modification user"
  FORMAT "X(8)"
  INITIAL ""
  POSITION 7
  MAX-WIDTH 4
  ORDER 50

ADD FIELD "create_date" OF "users" AS datetime 
  DESCRIPTION "Record creation date"
  FORMAT "99.99.99 hh:mm:ss"
  INITIAL "now"
  POSITION 8
  MAX-WIDTH 4
  ORDER 60

ADD FIELD "create_user" OF "users" AS character 
  DESCRIPTION "Record creation user"
  FORMAT "X(8)"
  INITIAL ""
  POSITION 9
  MAX-WIDTH 4
  ORDER 70

ADD FIELD "login" OF "users" AS character 
  DESCRIPTION "User login name"
  FORMAT "X(8)"
  INITIAL ""
  POSITION 10
  MAX-WIDTH 4
  ORDER 80

ADD FIELD "first_name" OF "users" AS character 
  DESCRIPTION "User's first name"
  FORMAT "X(8)"
  INITIAL ""
  POSITION 11
  MAX-WIDTH 4
  ORDER 90

ADD FIELD "last_name" OF "users" AS character 
  DESCRIPTION "User's last name"
  FORMAT "X(8)"
  INITIAL ""
  POSITION 12
  MAX-WIDTH 4
  ORDER 102

ADD FIELD "roles" OF "users" AS character 
  DESCRIPTION "User's security roles separeted by coma [,]"
  FORMAT "X(50)"
  INITIAL ""
  POSITION 13
  MAX-WIDTH 4
  ORDER 110

ADD FIELD "email" OF "users" AS character 
  DESCRIPTION "User's email"
  FORMAT "X(50)"
  INITIAL ""
  POSITION 14
  MAX-WIDTH 4
  ORDER 120

ADD FIELD "password" OF "users" AS character 
  DESCRIPTION "Password hash value"
  FORMAT "X(50)"
  INITIAL ""
  POSITION 15
  MAX-WIDTH 4
  ORDER 130

ADD FIELD "registration_number" OF "users" AS character 
  DESCRIPTION "User's registration number/person code"
  FORMAT "X(20)"
  INITIAL ""
  POSITION 16
  MAX-WIDTH 4
  ORDER 101

ADD FIELD "client_id" OF "users" AS int64 
  DESCRIPTION "User relation with clients table"
  FORMAT ">>>>>>>>>>>9"
  INITIAL "0"
  POSITION 17
  MAX-WIDTH 4
  ORDER 100

ADD INDEX "id" ON "users" 
  AREA "System Index"
  UNIQUE
  PRIMARY
  INDEX-FIELD "id" ASCENDING 

ADD INDEX "uid" ON "users" 
  AREA "Accounts Index"
  INDEX-FIELD "uid" ASCENDING 
  
ADD INDEX "client_id" ON "users" 
  AREA "System Index"
  INDEX-FIELD "client_id" ASCENDING 

ADD INDEX "email" ON "users" 
  AREA "System Index"
  UNIQUE
  INDEX-FIELD "email" ASCENDING 

ADD INDEX "login" ON "users" 
  AREA "System Index"
  INDEX-FIELD "login" ASCENDING 

ADD INDEX "modify_date" ON "users" 
  AREA "System Index"
  INDEX-FIELD "modify_date" ASCENDING 

ADD INDEX "modify_user" ON "users" 
  AREA "System Index"
  INDEX-FIELD "modify_user" ASCENDING 

ADD INDEX "registration_number" ON "users" 
  AREA "System Index"
  INDEX-FIELD "registration_number" ASCENDING 

ADD INDEX "state" ON "users" 
  AREA "System Index"
  INDEX-FIELD "state" ASCENDING 

ADD INDEX "version" ON "users" 
  AREA "System Index"
  INDEX-FIELD "version" ASCENDING 

.
