  DESCRIPTION "Record creation user"
  FORMAT "X(8)"
  INITIAL ""
  POSITION 8
  MAX-WIDTH 8
  ORDER 70

  
  

ADD FIELD "gl" OF "gl_balance" AS INT64
  DESCRIPTION "General ledger account number"
  FORMAT "zzzzzzzzz9"
  INITIAL ""
  POSITION 9
  MAX-WIDTH 10
  ORDER 80

ADD FIELD "balance_date" OF "gl_balance" AS date
  DESCRIPTION "Balance date"
  FORMAT "99.99.9999"
  INITIAL "?"
  POSITION 10
  MAX-WIDTH 10
  ORDER 90
  
ADD FIELD "currency" OF "gl_balance" AS char
  DESCRIPTION "Currency"
  FORMAT "X(3)"
  INITIAL ""
  POSITION 11
  MAX-WIDTH 3
  ORDER 100
  
  
ADD FIELD "balance" OF "gl_balance" AS decimal
  DESCRIPTION "Account balnce for date"
  FORMAT "-z,zzz,zzz,zz9.99"
