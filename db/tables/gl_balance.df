ADD FIELD "total_credit" OF "gl_balance" AS decimal
  DESCRIPTION "Account total credit turnover from open date"
  FORMAT "-z,zzz,zzz,zz9.99"
  INITIAL "0.00"
  POSITION 14
  MAX-WIDTH 17
  ORDER 130    
  
       
        
  

